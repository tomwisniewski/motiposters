<%= form_for @product do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :avatar, "Image" %>
  <%= f.file_field :avatar %>
  <br/>
  <% if @product.new_record? %>
    <%= f.submit "Create Product", :class => "btn" %>
  <% else %>
    <%= f.submit "Update Product", :class => "btn" %>
  <% end %>
<% end %>